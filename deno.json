{
  "tasks": {
    "dev": "deno run --env -A --watch main.ts",
    "db:pull": "deno run --env -A --node-modules-dir npm:drizzle-kit pull",
    "db:push": "deno run --env -A --node-modules-dir npm:drizzle-kit push",
    "db:generate": "deno run --env -A --node-modules-dir npm:drizzle-kit generate",
    "db:migrate": "deno run --env -A --node-modules-dir npm:drizzle-kit migrate",
    "db:studio": "deno run --env -A --node-modules-dir npm:drizzle-kit studio"
  },
  "imports": {
    "@/env": "./env.ts",
    "@/schema": "./src/db/schema.ts",
    "@/utils": "./src/utils/index.ts",
    "@/routes": "./src/routes/index.ts",
    "@/queries": "./src/db/queries/index.ts",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.4",
    "@std/assert": "jsr:@std/assert@1",
    "@types/lodash": "npm:@types/lodash@^4.17.20",
    "@types/pg": "npm:@types/pg@^8.15.5",
    "drizzle-kit": "npm:drizzle-kit@^0.31.5",
    "drizzle-orm": "npm:drizzle-orm@^0.44.6",
    "drizzle-zod": "npm:drizzle-zod@^0.8.3",
    "hono": "npm:hono@^4.10.1",
    "lodash": "npm:lodash@^4.17.21",
    "pg": "npm:pg@^8.16.3",
    "zod": "npm:zod@^4.1.12"
  }
}
